---
import { getLangFromUrl } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);

const content = {
	en: {
		greeting: "GeneX",
		tagline: "Thoughts on software engineering and technology",
	},
	"zh-tw": {
		greeting: "GeneX",
		tagline: "關於軟體工程與技術的思考",
	},
};

const t = content[lang] || content.en;
---

<section class="py-16 md:py-24">
	<div class="max-w-3xl mx-auto text-center space-y-3">
		<h1 class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-white tracking-tight">
			{t.greeting}
		</h1>
		<p class="text-lg text-slate-600 dark:text-slate-400">
			{t.tagline}
		</p>
	</div>
</section>
