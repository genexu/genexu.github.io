---
import { getRelativeLocaleUrl } from "astro:i18n";
import ThemeToggle from "../components/ThemeToggle.astro";
import LanguageSwitch from "../components/LanguageSwitch.astro";
import { Icon } from "astro-icon/components";

const lang = Astro.currentLocale;
const home = getRelativeLocaleUrl(lang, '');

const navItems = {
	en: [
		{ path: "blog", label: "Blog" },
		{ path: "notes", label: "Notes" },
	],
	"zh-tw": [
		{ path: "blog", label: "文章" },
		{ path: "notes", label: "筆記" },
	],
};

const navConfig = navItems[lang] || navItems.en;
const nav = navConfig.map(item => ({
	href: getRelativeLocaleUrl(lang, item.path),
	label: item.label
}));

const currentPath = Astro.url.pathname;

const socialLinks = [
	{ href: "https://github.com/genexu", icon: "mdi:github", label: "GitHub" },
	{ href: "https://www.linkedin.com/in/gene-xu-05ab99139/", icon: "mdi:linkedin", label: "LinkedIn" },
	{ href: "mailto:genexu1117.dev@gmail.com", icon: "mdi:email", label: "Email" },
	{ href: `/rss.xml`, icon: "mdi:rss", label: "RSS" },
];
---

<header class="sticky top-0 z-50 w-full backdrop-blur-md bg-white/80 dark:bg-slate-900/80 border-b border-slate-200/50 dark:border-slate-700/50 transition-all duration-300">
	<nav class="container mx-auto px-4 py-4">
		<div class="flex items-center justify-between">
			<a href={home} class="flex items-center space-x-2 group">
				<div class="w-10 h-10 bg-gradient-to-br from-accent-500 to-accent-700 rounded-lg flex items-center justify-center transform group-hover:scale-110 transition-transform duration-300">
					<span class="text-white font-bold text-xl">G</span>
				</div>
				<span class="text-xl font-bold bg-gradient-to-r from-slate-900 to-slate-700 dark:from-white dark:to-slate-300 bg-clip-text text-transparent">
					GeneX.io
				</span>
			</a>

			<div class="hidden md:flex items-center space-x-1">
				{nav.map((item) => (
					<a
						href={item.href}
						class:list={[
							"px-4 py-2 rounded-lg font-medium transition-all duration-200",
							currentPath.startsWith(item.href)
								? "bg-accent-100 dark:bg-accent-900/30 text-accent-700 dark:text-accent-300"
								: "text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800"
						]}
					>
						{item.label}
					</a>
				))}
			</div>

			<div class="flex items-center gap-2">
				<div class="hidden md:flex items-center gap-1 mr-2">
					{socialLinks.map((link) => (
						<a
							href={link.href}
							target={link.href.startsWith('http') ? '_blank' : undefined}
							rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
							class="p-2 text-slate-600 dark:text-slate-400 hover:text-accent-600 dark:hover:text-accent-400 transition-colors rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800"
							aria-label={link.label}
						>
							<Icon name={link.icon} width={20} height={20} />
						</a>
					))}
				</div>
				<div class="w-px h-6 bg-slate-300 dark:bg-slate-700 hidden md:block"></div>
				<LanguageSwitch />
				<ThemeToggle size={32} />
			</div>
		</div>
	</nav>
</header>
