---
import { defaultLanguage } from "../i18n/languages";
import ThemeToggle from "../components/ThemeToggle.astro";
import LanguageSwitch from "../components/LanguageSwitch.astro";
import { getLangFromUrl } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
let home = "/";
if (lang && lang !== defaultLanguage) home = `/${lang}/`;

const navItems = {
	en: [
		{ href: `/${lang}/blog`, label: "Blog" },
		{ href: `/${lang}/notes`, label: "Notes" },
		{ href: `/${lang}/tags`, label: "Tags" },
	],
	"zh-tw": [
		{ href: `/${lang}/blog`, label: "文章" },
		{ href: `/${lang}/notes`, label: "筆記" },
		{ href: `/${lang}/tags`, label: "標籤" },
	],
};

const nav = navItems[lang] || navItems.en;
const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 w-full backdrop-blur-md bg-white/80 dark:bg-slate-900/80 border-b border-slate-200/50 dark:border-slate-700/50 transition-all duration-300">
	<nav class="container mx-auto px-4 py-4">
		<div class="flex items-center justify-between">
			<a href={home} class="flex items-center space-x-2 group">
				<div class="w-10 h-10 bg-gradient-to-br from-accent-500 to-accent-700 rounded-lg flex items-center justify-center transform group-hover:scale-110 transition-transform duration-300">
					<span class="text-white font-bold text-xl">G</span>
				</div>
				<span class="text-xl font-bold bg-gradient-to-r from-slate-900 to-slate-700 dark:from-white dark:to-slate-300 bg-clip-text text-transparent">
					GeneX.io
				</span>
			</a>

			<div class="hidden md:flex items-center space-x-1">
				{nav.map((item) => (
					<a
						href={item.href}
						class:list={[
							"px-4 py-2 rounded-lg font-medium transition-all duration-200",
							currentPath.startsWith(item.href)
								? "bg-accent-100 dark:bg-accent-900/30 text-accent-700 dark:text-accent-300"
								: "text-slate-600 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-800"
						]}
					>
						{item.label}
					</a>
				))}
			</div>

			<div class="flex items-center space-x-3">
				<LanguageSwitch />
				<ThemeToggle size={32} />
			</div>
		</div>
	</nav>
</header>
