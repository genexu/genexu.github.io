---
import Layout from "./Layout.astro";
import SearchBar from "../components/SearchBar";

interface Props {
	title: string;
	tag?: string;
	showSearch?: boolean;
}

const { title, tag, showSearch = true } = Astro.props;
---

<Layout title={title} description={title}>
	<div class="space-y-12 md:space-y-16">
		<section>
			{tag ? (
				<div class="flex items-center gap-3">
					<h1 class="text-2xl md:text-3xl font-bold text-slate-900 dark:text-white">{title}</h1>
					<span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-accent-50 dark:bg-accent-900/30 text-accent-700 dark:text-accent-300 border border-accent-200 dark:border-accent-700">
						{tag}
					</span>
				</div>
			) : (
				<h1 class="text-2xl md:text-3xl font-bold text-slate-900 dark:text-white">{title}</h1>
			)}
			{showSearch && (
				<div class="mt-3">
					<SearchBar client:load />
				</div>
			)}
		</section>

		<section class="space-y-4">
			<slot />
		</section>
	</div>
</Layout>
